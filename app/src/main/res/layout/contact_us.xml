<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_screen.ui.contact_us.ui.contact_us">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".08"
                android:paddingLeft="@dimen/_15sdp"
                android:text="@string/contactus"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".08"
                android:paddingLeft="@dimen/_15sdp"
                android:text="@string/write_a_suggestion"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/suggestion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="left"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_weight=".2"
                android:background="@drawable/verifcation_code_item" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".04" />

            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/next_page"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".08"
                android:paddingLeft="@dimen/_15sdp"
                android:text="@string/contact_details"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".32"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mobile"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:id="@+id/phone"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/mail"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_10sdp"
                    android:id="@+id/address"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".13">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/auth_button_bg"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/back_one" />
            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
</layout>